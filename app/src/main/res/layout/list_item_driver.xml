<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_teamname_textview"
        android:padding="1dp"
        android:textStyle="bold"
        android:layout_margin="1dp"

        tools:text="Team Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_teamname_textview"
        android:layout_marginLeft="30dp"
        android:id="@+id/list_item_driver1"
        android:padding="5dp"
        tools:text="Driver 1"/>

    <CheckBox
        android:id="@+id/list_checkbox_driver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/list_item_driver1"
        android:padding="1dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_driver1"
        android:layout_marginLeft="30dp"
        android:padding="5dp"
        android:id="@+id/list_item_driver2"

        tools:text="Driver 2"/>

    <CheckBox
        android:id="@+id/list_checkbox_driver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/list_item_driver2"
        android:padding="1dp"
        />



</RelativeLayout>